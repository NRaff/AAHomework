<a href="<%= album_url(@track.album_id) %>">Back to album...</a>
<h1>Create a Track</h1>
<form 
  action=<%= tracks_url %>
  method="POST"
  style="display:flex; flex-direction: column;"
>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Album
    <select name="track[album_id]">
      <% @albums.each do |album| %>
        <option value="<%= album.id %>" <%= album.id == @track.album_id ? "selected" : "" %>> <%= album.title %> </option>
      <% end %>
    </select>
  </label>
  <label>Title
    <input type="text" name="track[title]" value="<%= @track.title %>">
  </label>
  <label>Track Number
    <input type="text" name="track[ord]"value="<%= @track.ord %>">
  </label>
  <label>Bonus?</label>
    <label>Bonus
      <input type="radio" name="track[bonus?]" <%= @track.bonus? ? "checked" : ""%>>
    </label>
    <label>Regular
      <input type="radio" name="track[bonus?]" <%= @track.bonus? ? "" : "checked"%>>
    </label>
  </label>
  <label>Lyrics
    <textarea name="track[lyrics]" cols="30" rows="10"><%= @track.lyrics %></textarea>
  </label>
  <br>
  <input type="submit" value="Create Track">
</form>