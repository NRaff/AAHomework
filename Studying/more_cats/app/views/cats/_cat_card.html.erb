<div 
  class="cat_card"
>
  <h1><%= cat.name %></h1>
  <table>
    <thead>
      <th>Age</th>
      <th>Birthday</th>
      <th>Color</th>
      <th>Sex</th>
      <th>Description</th>
    </thead>
    <tbody>
      <td><%= cat.age %></td>
      <td><%= cat.birth_date %></td>
      <td><%= cat.color %></td>
      <td><%= cat.sex %></td>
      <td><%= cat.description %></td>
      <td><a href=<%= edit_cat_url(cat) %>>Edit Cat</a></td>
    </tbody>
  </table>
  <div>
    <h1>All Rental Requests</h1>
    <table>
      <thead>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <th>Edit Request</th>
      </thead>
      <tbody>
        <%= render './cat_rental_requests/request_row', rent_requests: cat.rental_requests %>
      </tbody>
    </table>
  </div>
  <br>
  <a href=<%= cats_url %>>Back to all cats</a>
</div>